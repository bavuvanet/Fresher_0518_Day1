<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/gLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="28dp" />


    <android.support.constraint.Guideline
        android:id="@+id/gRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="28dp" />

    <View
        android:id="@+id/vToolbar"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:background="#3f5fa3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:tint="@android:color/white"
        android:layout_width="12dp"
        android:layout_height="21dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@id/vToolbar"
        app:layout_constraintLeft_toLeftOf="@id/vToolbar"
        app:layout_constraintTop_toTopOf="@id/vToolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:letterSpacing="-0.02"
        android:text="Quên mật khẩu"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/vToolbar"
        app:layout_constraintLeft_toLeftOf="@id/vToolbar"
        app:layout_constraintRight_toRightOf="@id/vToolbar"
        app:layout_constraintTop_toTopOf="@id/vToolbar" />

    <ImageView
        android:id="@+id/ivSend"
        android:layout_width="99dp"
        android:layout_height="99dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/send"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vToolbar" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.03"
        android:text="Email"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="@id/gLeft"
        app:layout_constraintTop_toBottomOf="@id/ivSend" />

    <EditText
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#3f5fa3"
        android:letterSpacing="0.03"
        android:text="giangdinhhaui@gmail.com"
        android:id="@+id/etEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:theme="@style/MyEditText"
        app:layout_constraintLeft_toLeftOf="@id/gLeft"
        app:layout_constraintRight_toRightOf="@id/gRight"
        app:layout_constraintTop_toBottomOf="@id/tvEmail" />

    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="@id/etEmail"
        app:layout_constraintRight_toRightOf="@id/etEmail"
        app:layout_constraintTop_toTopOf="@id/etEmail" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@drawable/bg_login"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.03"
        android:text="Gửi yêu cầu"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="@id/gLeft"
        app:layout_constraintRight_toRightOf="@id/gRight"
        app:layout_constraintTop_toBottomOf="@id/etEmail" />


</android.support.constraint.ConstraintLayout>